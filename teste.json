function getCadeiraTitles(){
	var xmlhttp;
	if (window.XMLHttpRequest){
		xmlhttp = new XMLHttpRequest();
	} else {
  		xmlhttp = new ActiveXObject("Microsoft.XMLHTTP");
  	}
	xmlhttp.onreadystatechange = function(){
  		if (xmlhttp.readyState == 4 && xmlhttp.status == 200) {
    		var jsondata = JSON.parse(xmlhttp.responseText); //retrieve result as an JavaScript object
   			var cadeiras = jsondata.cadeiras;
			var output='<form>';
			output+='<select id="cadeira_select" onchange="cadeiraSelect()" >';
   			for (var i=0; i < cadeira.length; i++){
    			output +='<option value="'+i+'">'+cadeiras[i].title+'</option>';
   			}
			output+='</select>';
			output+='</form>';
   			document.getElementById("cadeira_title").innerHTML=output;
    	}
  	}
	xmlhttp.open("GET","cadeiras.json",true);
	xmlhttp.send();










function cadeiraSelect(){
	var selectBox = document.getElementById("cadeira_select");
	var cadeiraIndex = selectBox.options[selectBox.selectedIndex].value;
	getCadeiraInfo(cadeiraIndex);
}
function getCadeiraInfo(i){
	var xmlhttp;
	if (window.XMLHttpRequest){
		xmlhttp = new XMLHttpRequest();
	} else {
  		xmlhttp = new ActiveXObject("Microsoft.XMLHTTP");
  	}
	xmlhttp.onreadystatechange = function(){
  		if (xmlhttp.readyState == 4 && xmlhttp.status == 200) {
    		var jsondata = JSON.parse(xmlhttp.responseText); //retrieve result as an JavaScript object
   			var cadeiras = jsondata.cadeiras;
			var output='';
   			output+= '<li>nº de horas: '+cadeiras[i].nº de horas+'</li>';
			output+= '<li>Professor: '+cadeiras[i].professor+'</li>';
			output+= '<li>Conteudo: '+cadeiras[i].conteudo+'</li>';
   			document.getElementById("movie_info").innerHTML=output;
    	}
  	}
	xmlhttp.open("GET","cadeiras.json",true);
	xmlhttp.send();


